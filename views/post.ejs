<% layout('layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center mb-3">New Post</h1>
    <div class="col-6 offset-3 mb-5">
        <form action="/newPost" method="post" novalidate class="validate-form" >
            <div class="form-group mb-3">
                <label class="mb-2" for="title">Enter Title</label>
                <input type="text" class="form-control" id="title" placeholder="" name="title" required>
                <div class="valid-feedback">
                    Looks good!
                  </div>
            </div>

           
           
            
            <div class="form-group mb-3">
                <label for="description">description</label>
                <textarea class="form-control" id="description" rows="3" name="post" required></textarea>
                <div class="valid-feedback">
                    Looks good!
                  </div>
            </div>


            <button class="btn btn-success">Add Post</button>
        </form>



    </div>
</div>